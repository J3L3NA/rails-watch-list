<h1><%= @list.name %></h1>

<% @bookmarks.each do |bookmark| %>
  <%=bookmark.comment %> - <%= bookmark.movie.title %>
  <%=image_tag "https://image.tmdb.org/t/p/w500/#{bookmark.movie.poster_url}", width: 200 %>
  <p><%= link_to 'delete bookmark', bookmark_path(bookmark), 'data-turbo-method': :delete %></p>
<% end %>


<p><%= link_to 'New bookmark', new_list_bookmark_path(@list) %></p>
